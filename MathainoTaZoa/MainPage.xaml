<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathainoTaZoa.MainPage"
             BackgroundColor="#FFFDE7"
             Shell.NavBarIsVisible="False">

    
    <VerticalStackLayout Spacing="30"                         
                         VerticalOptions="Center"
                         HorizontalOptions="Center">

        <!-- Τίτλος με πατουσίτσες ξεχωριστά -->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Label Text="🐾" FontSize="34" VerticalOptions="Center"/>
            <Label Text="Μαθαίνω τα ζώα"
                   FontSize="34"
                   FontAttributes="Bold"
                   TextColor="#FF7043"
                   HorizontalOptions="Center" />
            <Label Text="🐾" FontSize="34" VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <!-- Όνομα ζώου -->
        <Label x:Name="AnimalLabel"
               FontSize="36"
               FontAttributes="Bold"
               TextColor="#6A1B9A"
               HorizontalOptions="Center" />

        <!-- Εικόνα ζώου με πλαίσιο -->
        <Frame Padding="10"
               HasShadow="True"
               CornerRadius="20"
               BackgroundColor="White"
               BorderColor="#FFCC80"
               HorizontalOptions="Center"
               VerticalOptions="Center">

            <Grid>
                <!-- WebView for GIF -->
                <WebView x:Name="AnimalGifWeb"
                 HeightRequest="400"
                 WidthRequest="500"
                 IsVisible="False"/>

                <!-- Static Image -->
                <Image x:Name="AnimalImage"
               WidthRequest="400"
               HeightRequest="500">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAnimalTapped"/>
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </Frame>

        <!-- Κουμπιά -->
        <HorizontalStackLayout Spacing="25"
                               HorizontalOptions="Center"
                               VerticalOptions="Center">
            
            <Button x:Name="PrevBtn"
                    Text="⏮ Προηγούμενο"
                    FontSize="18"
                    TextColor="White"
                    WidthRequest="170"
                    HeightRequest="60"
                    CornerRadius="30"
                    BackgroundColor="#4CAF50"
                    Clicked="OnPrevClicked"/>

            <Button x:Name="NextBtn"
                    Text="Επόμενο ⏭"
                    FontSize="18"
                    TextColor="White"
                    WidthRequest="170"
                    HeightRequest="60"
                    CornerRadius="30"
                    BackgroundColor="#2196F3"
                    Clicked="OnNextClicked"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
